@model PasswordUpdateModel

<form method="post" class="password-info" asp-controller="Account" asp-action="UpdatePassword">

    <h5 class="form-title">Password</h5>

    <div class="input-group">
        <label asp-for="@Model.CurrentPassword"></label>
        <span class="current-password-span" asp-validation-for="@Model.CurrentPassword"></span>
        <input class="current-password" asp-for="@Model.CurrentPassword">
    </div>

    <div class="group-wrapper">
        <div class="input-group">
            <label asp-for="@Model.NewPassword"></label>
            <span asp-validation-for="@Model.NewPassword"></span>
            <input asp-for="@Model.NewPassword">
        </div>
        <div class="input-group">
            <label asp-for="@Model.ConfirmNewPassword"></label>
            <span asp-validation-for="@Model.ConfirmNewPassword"></span>
            <input asp-for="@Model.ConfirmNewPassword">
        </div>
    </div>

    <div class="button-wrapper">
        <button type="reset" class="cancel btn-gray">Cancel</button>
        <button type="submit" class="save btn-theme">Save changes</button>
    </div>

</form>

<script defer src="~/js/passwordValidation.js"></script>