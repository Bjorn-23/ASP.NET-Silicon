@model AccountSidebarViewModel

<div class="sidebar">
    <div class="profile-wrapper">
        <div class="image-wrapper">
            <img class="profile-picture" src="@Model.ProfileImage.ImageUrl" alt="@Model.ProfileImage.AltText">
            @* The div below should be  a button to fileupload or similar *@
            <button class="btn change-pic" id="changePic"><i class="fa-sharp fa-solid fa-rotate-reverse"></i></button>
        </div>
        <h4 class="profile-name">@Model.AccountInfo.FirstName @Model.AccountInfo.LastName</h4>
        <p class="profile-email">@Model.AccountInfo.Email</p>
    </div>

    @* class of active is determined based on what the current value of action route is. *@
    <nav>
        <a class="@(ViewContext.RouteData.Values["action"]!.ToString()! == "Details" ? "active" : "")" asp-controller="Account" asp-action="Details"><i class="fa-light fa-gear"></i>Account Details</a>
        <a class="@(ViewContext.RouteData.Values["action"]!.ToString()! == "Security" ? "active" : "")" asp-controller="Account" asp-action="Security"><i class="fa-regular fa-lock"></i>Security</a>
        <a class="@(ViewContext.RouteData.Values["action"]!.ToString()! == "SavedCourses" ? "active" : "")" asp-controller="Account" asp-action="SavedCourses"><i class="fa-regular fa-bookmark"></i>Saved Courses</a>
        <a class="@(ViewContext.RouteData.Values["action"]!.ToString()! == "SignOut" ? "active" : "")" asp-controller="Account" asp-action="SignOut"><i class="fa-sharp fa-light fa-arrow-right-from-bracket sign-out"></i>Sign Out</a>
    </nav>
</div>