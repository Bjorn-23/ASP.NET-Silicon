@model SignInViewModel

@{
    ViewData["Title"] = "Sign in";
}

<section class="sign-in-section container">

    <form class="sign-in-form" method="post" asp-controller="Auth" asp-action="SignIn" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" novalidate>
        
        <div class="@((ViewBag.StatusMessage == "Incorrect Email or Password" || ViewBag.StatusMessage == "Failed to login with Facebook - please try again later") ? " incorrectEmailOrPassword" : (ViewBag.StatusMessage == "User created succesfully" ) ? "userCreateSuccess" : "field-validation-valid" )">@ViewBag.StatusMessage</div>

        <h1 class="title">Welcome Back</h1>
        <p class="sign-up">Don't' have an account yet? <a asp-controller="Auth" asp-action="SignUp">Sign up here.</a></p>      
  
        <div id="Email" class="input-group">
            <label asp-for="Form.Email"></label>
            <input asp-for="Form.Email">
        </div>

        <div id="password" class="input-group">
            <label asp-for="Form.Password"></label>
            <input asp-for="Form.Password">
        </div>
        
        <div id="terms" class="checkbox-group">
            <input asp-for="Form.RememberMe">
            <label asp-for="Form.RememberMe">Remember me</label>
        </div>

        <button class="btn-theme submit" type="submit">Sign in</button>
    </form>

    <div class="sign-in-social">
        @* add a working link to retrieve password *@
        <a id="forgot-password" asp-controller="Account" asp-action="Forgot">Forgot your password?</a>

        <div class="divider"></div>

        <h6 class="social-sign-in">Or sign in with your social network</h6>

        <div class="button-wrapper">
            <a asp-action="Google" asp-controller="Auth" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" class="btn-gray"><i class="fa-brands fa-google"></i>Google</a>
            <a asp-action="Facebook" asp-controller="Auth" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" class="btn-gray"><i class="fa-brands fa-square-facebook"></i>Facebook</a>
        </div>
    </div>
    
</section>
